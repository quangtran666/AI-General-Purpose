@page "/Account/ResetPassword"
@model identityserver.Pages.Account.ResetPassword.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="min-vh-85 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold mb-1">Reset Password</h2>
                            <p class="text-muted">Enter your new password below</p>
                        </div>

                        <partial name="_ValidationScriptsPartial" />
                        
                        <form asp-page="/Account/ResetPassword/ResetPassword">
                            <input asp-for="Input.Code" type="hidden" />
                            <input asp-for="Input.ReturnUrl" type="hidden" />

                            <div class="form-group mb-3">
                                <div class="input-group border rounded-3">
                                    <input asp-for="Input.Email" class="form-control border-0 shadow-none" 
                                           placeholder="Email address" autocomplete="username" />
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <div class="input-group border rounded-3">
                                    <input asp-for="Input.Password" class="form-control border-0 shadow-none" 
                                           placeholder="New password" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <div class="input-group border rounded-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control border-0 shadow-none" 
                                           placeholder="Confirm new password" autocomplete="new-password" />
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="d-flex mb-2">
                                <button type="submit" class="btn btn-primary py-2 fw-bold w-100">Reset Password</button>
                            </div>

                            <div class="text-center">
                                <a asp-page="/Account/Login/Index" class="text-decoration-none">
                                    <i class="fas fa-arrow-left me-2"></i>Back to login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
